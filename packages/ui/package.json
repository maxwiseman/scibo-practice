{
  "name": "@scibo/ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "default": [
        "./src/*.ts",
        "./src/*.tsx"
      ]
    }
  },
  "license": "MIT",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "ui-add": "bunx -y shadcn@latest add && prettier src --write --list-different"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "next-themes": "^0.3.0",
    "react-hook-form": "^7.53.0",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@scibo/eslint-config": "0.3.0",
    "@scibo/prettier-config": "0.1.0",
    "@scibo/tailwind-config": "0.1.0",
    "@scibo/tsconfig": "0.1.0",
    "@types/react": "18.3.11",
    "eslint": "9.12.0",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "typescript": "5.6.3",
    "zod": "3.23.8"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "zod": "3.23.8"
  },
  "prettier": "@scibo/prettier-config"
}
